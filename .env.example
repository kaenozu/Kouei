# Kouei Configuration
# Copy this file to .env and customize

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Database
DATABASE_URL=sqlite:///data/race_data.db
USE_POSTGRES=false
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/kouei
# USE_POSTGRES=true

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL_DEFAULT=300
CACHE_TTL_REALTIME=60

# Model Settings
MODEL_DIR=models
USE_ONNX=true

# Data Paths
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_PATH=data/processed/race_data.csv

# Discord Notifications
DISCORD_WEBHOOK_URL=
NOTIFICATION_THRESHOLD=0.5

# Training
AUTO_TRAIN_THRESHOLD=1000

# Scraping
SCRAPE_DELAY=1.0
SCRAPE_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# Kelly Criterion (Betting)
FRACTIONAL_KELLY=0.5
MAX_BET_PERCENTAGE=0.1
MIN_BET_AMOUNT=100

# LLM Integration (optional)
# LLM_PROVIDER=openai  # or anthropic, none
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Feature Flags
ENABLE_WHALE_DETECTION=true
ENABLE_DRIFT_DETECTION=true
ENABLE_REALTIME_ODDS=true
