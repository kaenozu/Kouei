[Unit]
Description=Kouei AI Kyotei API Service
After=network.target

[Service]
Type=simple
User=exedev
WorkingDirectory=/home/exedev/Kouei
Environment=PYTHONPATH=/home/exedev/Kouei
ExecStart=/home/exedev/Kouei/.venv/bin/python -m uvicorn src.api.main_api_new:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
